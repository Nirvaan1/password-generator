{% extends 'base.html.twig' %}
{% block body %}
<h1>Password Generator</h1>
    <form id="js-form-password" action="{{ path('app_generate_password') }}"
          x-data="{
            length: $persist(26),
            uppercaseLetters:  $persist(false),
            digits: $persist(false),
            specialCharacters: $persist(true),
          }"
    >
        <div>
            <label for="length">Length</label>
            <select name="length" id="length"  x-model="length">
                {% for i in password_min_length..password_max_length %}
                    <option value="{{ i }}"
                            {# {%  if i == password_default_length %}selected{% endif%} #}
                    >{{ i }}</option>
                {% endfor %}
            </select>
        </div>

        <div>
            <label for="uppercase-letters">Uppercase Letters</label>
            <input
                    name="uppercase-letters"
                    type="checkbox"
                    id="uppercase-letters"
                    x-model="uppercaseLetters"
                  {#   {{ app.session.get('app.uppercase_letters') ? 'checked' }}#}
            >
        </div>

        <div>
            <label for="digits">Numbers</label>
            <input
                    name="digits"
                    type="checkbox"
                    id="digits"
                    x-model="digits"
                   {#  {{ app.session.get('app.digits') ? 'checked' }}#}
            >
        </div>

        <div>
            <label for="special-characters">Special Characters</label>
            <input
                    name="special-characters"
                    type="checkbox"
                    id="special-characters"
                    x-model="specialCharacters"
                    {# {{ app.session.get('app.special_characters') ? 'checked' }} #}
            >
        </div>

        <div>
            <button type="submit">Generate Password</button>
        </div>
    </form>

    <footer>
        <p>
            Built with &hearts; by
            <a href="https://github.com/Nirvaan1">Nirvaan</a>.
        </p>
    </footer>
{% endblock %}

{% block javascripts %}
    <script defer src="https://unpkg.com/@alpinejs/persist@3.x.x/dist/cdn.min.js"></script>

    <script src="//unpkg.com/alpinejs" defer></script>
{% endblock %}